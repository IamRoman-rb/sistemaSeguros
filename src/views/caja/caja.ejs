<!DOCTYPE html>
<html lang="en">
    <%- include("../partials/head") %>
<body>
    <%- include("../partials/header") %>
    <main>
        <header>
            <h1>Caja</h1>
            <h2> <%=new Intl.NumberFormat("es-AR",{ style: 'currency', currency: 'ARS' }).format(total)%></h2>
        </header>
        <article>
            <h2>Ingresos de Polizas</h2>
            <% if (pagosEnEfectivo.length == 0) { %>
                <p>No hay ingresos de polizas</p>
            <% } else { %>
                <ul>
                    <% pagosEnEfectivo.forEach(pago => { %>
                        <li>
                            <dl>
                                <dt>Fecha:</dt>
                                <dd><%= pago.fecha %></dd>
                            </dl>
                            <dl>
                                <dt>Ingreso:</dt>
                                <dd><%=  new Intl.NumberFormat("es-AR",{ style: 'currency', currency: 'ARS' }).format(pago.valor) %></dd>
                            </dl>
                            <dl>
                                <dt>Cliente:</dt>
                                <dd><%= pago.cliente %></dd>
                            </dl>
                            <dl>
                                <dt>Cobrador:</dt>
                                <dd><%= pago.cobrador %></dd>
                            </dl>
                        </li>
                    <% }) %>
                </ul>
            <% } %>
        </article>
        <article>
            <h2>Otros Ingresos</h2>
            <% if (ingresos.length == 0) { %>
                <p>No hay ingresos</p>
            <% } else { %>
                <ul>
                    <% ingresos.forEach(ingreso => { %>
                        <li>
                            <dl>
                                <dt>Fecha:</dt>
                                <dd><%= ingreso.fecha %></dd>
                            </dl>
                            <dl>
                                <dt>Ingreso:</dt>
                                <dd><%=  new Intl.NumberFormat("es-AR",{ style: 'currency', currency: 'ARS' }).format(ingreso.monto) %></dd>
                            </dl>
                            <dl>
                                <dt>Concepto:</dt>
                                <dd><%= ingreso.motivo %></dd>
                            </dl>
                            <dl>
                                <dt>Descripcion:</dt>
                                <dd><%= ingreso.descripcion %></dd>
                            </dl>
                            <dl>
                                <% if (usuario.permisos != 2) { %>
                                    <dt>Acciones:</dt>
                                    <a href="/caja/confirmar/<%= ingreso.id %>">Eliminar</a>
                                <% } %>
                            </dl>
                        </li>
                    <% }) %>
                </ul>
            <% } %>
        </article>
        <article>
            <h2>Egresos</h2>
            <% if (egresos.length == 0) { %>
                <p>No hay egresos</p>
            <% } else { %>
                <ul>
                    <% egresos.forEach(egreso => { %>
                        <li>
                            <dl>
                                <dt>Fecha:</dt>
                                <dd><%= egreso.fecha %></dd>
                            </dl>
                            <dl>
                                <dt>Egreso:</dt>
                                <dd><%=  new Intl.NumberFormat("es-AR",{ style: 'currency', currency: 'ARS' }).format(egreso.monto) %></dd>
                            </dl> 
                            <dl>
                                <dt>Concepto:</dt>
                                <dd><%= egreso.motivo %></dd>
                            </dl>
                            <dl>
                                <dt>Descripcion:</dt>
                                <dd><%= egreso.descripcion %></dd>
                            </dl>
                            <dl>
                                <% if (usuario.permisos != 2) { %>
                                    <dt>Acciones:</dt>
                                    <a href="/caja/confirmar/<%= egreso.id %>">Eliminar</a>
                                <% } %>
                            </dl>
                        </li>
                    <% }) %>
                </ul>
            <% } %>
        </article>
    </main>
</body>
</html>