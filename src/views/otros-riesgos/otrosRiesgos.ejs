<!DOCTYPE html>
<html lang="es">
    <%- include("../partials/head") %>

<body>
    <%- include("../partials/header") %>
    <main>
        <header>
            <h1>Otros Riesgos</h1>
        </header>
        <form action="/otros-riesgos/" method="get">
            <fieldset>
            <label for="busqueda">
              Buscar Poliza:
            </label>
            <input type="text" id="busqueda" name="busqueda" minlength="3" required
              placeholder="Ingresar nombre o cuit del cliente, numero de poliza">
            </fieldset>
            <a href="/otros-riesgos/" class="cancelar">Cancelar</a>
            <button type="submit">Buscar</button>
          </form>

          <% if (polizas.length==0) { %>
            <p>No se encontraron pólizas.</p>
            <% } else { %>
              <ul>
                <% polizas.filter(poliza => !poliza.desconocido).forEach(poliza => { %>
                  <li>
                    <dl>
                      <dt>N Póliza:</dt>
                      <dd><%= poliza.n_poliza %></dd>
                    </dl>
                    <dl>
                      <dt>Cliente:</dt>
                      <dd><%= poliza.cliente?.nombre || 'Sin cliente' %></dd>
                    </dl>
                    <dl>
                      <dt>Desde:</dt>
                      <dd><%= poliza.f_ini_vigencia %></dd>
                    </dl>
                    <dl>
                      <dt>Hasta:</dt>
                      <dd><%= poliza.f_fin_vigencia %></dd>
                    </dl>
                    <dl>
                      <dt>Tipo Poliza:</dt>
                      <dd><%= poliza.tipo_poliza || 'Sin cobertura' %></dd>
                    </dl>
                    <nav>
                      <a href="/otros-riesgos/detalle/<%= poliza.id %>">Detalle</a>
                    </nav>
                  </li>
                <% }); %>
              </ul>
              <% } %>
    </main>
    
</body>
</html>