<!DOCTYPE html>
<html lang="es">
  <%- include("../partials/head") %>
<body>
    <%- include("../partials/header") %>
    <main>
        
        <header>
            <h1>Empresas</h1>
        </header>
        <article>
            <ul>
              <% empresas.forEach(empresa => { %>
                <li>
                  <dl>
                    <dt>Nombre:</dt>
                    <dd><%= empresa.nombre %></dd>
                    <dt>Coberturas:</dt>
                    <dd>
                      <ul>
                        <% empresa.coberturas.forEach((cobertura_empresa, index) => { %>
                            <% coberturas.forEach(cobertura => { %>
                                <% if (cobertura_empresa == cobertura.id) { %>
                                    <li>
                                        <%= cobertura.nombre %>: <%= cobertura.descripcion %> 
                                    </li>
                                <% } %>
                            <% }) %>
                        <% }) %>
                      </ul>
                    </dd>
                    <dt>Acciones:</dt>
                    <dd>
                      <a href="/empresas/editar/<%= empresa.id %>">Editar</a>
                      </dd>
                  </dl>
                </li>
              <% }); %>
            </ul>
          </article>
    </main>
</body>
</html>