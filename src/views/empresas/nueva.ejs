<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>Nueva empresa</h1>
    <form action="/empresas/guardar" method="POST">
        <label for="nombre">Nombre
            <input type="text" name="nombre" id="nombre" minlength="3" required>
        </label>
        <ul>
            <% coberturas.forEach(cobertura => { %>
                <li>
                    <label for="coberturas">
                        <%= cobertura.nombre %>
                        <input type="checkbox" name="coberturas" id="<%= cobertura.id %>" value="<%= cobertura.id %>">                
                    </label>
                </li>
            <% }) %>
        </ul>
        <section id="buttons" class="buttons">
            <button type="reset">Cancelar</button>
            <button type="submit">Crear</button>
        </section>
    </form>
</body>
</html>