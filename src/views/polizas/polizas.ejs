<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lista de Pólizas</title>
</head>

<body>
  <%- include("../partials/header") %>
    <main>
      <header>
        <h1>Lista de Pólizas</h1>
        <form action="/polizas/" method="get">
          <label for="busqueda">
            Buscar Poliza:
          </label>
          <input type="text" id="busqueda" name="busqueda" minlength="3" required
            placeholder="Ingresar nombre o cuit del cliente, numero de poliza o patente del vehiculo">
          <button type="submit">Buscar</button>
        </form>
      </header>
      <% if (polizas.length==0) { %>
        <p>No se encontraron pólizas.</p>
        <% } else { %>
          <ul>
            <% polizas.filter(poliza => !poliza.inhabilitado).forEach(poliza=> { %>
              <li>
                <dl>
                  <dt>Número de Póliza</dt>
                  <dd>
                    <%= poliza.n_poliza %>
                  </dd>
                  <dt>Fecha de Emisión</dt>
                  <dd>
                    <%= poliza.f_emision %>
                  </dd>
                  <dt>Inicio Vigencia</dt>
                  <dd>
                    <%= poliza.f_ini_vigencia %>
                  </dd>
                  <dt>Fin Vigencia</dt>
                  <dd>
                    <%= poliza.f_fin_vigencia %>
                  </dd>
                  <dt>Cobertura</dt>
                  <dd>
                    <%= poliza.cobertura %>
                  </dd>
                  <dt>Nombre del Cliente</dt>
                  <dd>
                    <%= poliza.cliente ? poliza.cliente.nombre : "Sin Cliente" %>
                  </dd>
                  <dt>CUIT del Cliente</dt>
                  <dd>
                    <%= poliza.cliente ? poliza.cliente.cuit : "Sin Cliente" %>
                  </dd>
                  <dt>Patente</dt>
                  <dd>
                    <%= poliza.patente %>
                  </dd>
                </dl>
                <nav>
                  <a href="/polizas/detalle/<%= poliza.id %>">Ver Detalle</a>
                </nav>
              </li>
              <% }); %>
          </ul>
          <% } %>
    </main>
</body>

</html>